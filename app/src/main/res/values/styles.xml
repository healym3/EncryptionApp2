<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStyle">
        <item name="android:layout_margin">@dimen/regularMargin</item>
        <item name="android:padding">@dimen/regularPadding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
    </style>

    <style name="buttonStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="cardViewStyle2" parent="cardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="editTextMultiLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">@dimen/regularMargin</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">start|top</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">8dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorHint">#004D40</item>
    </style>

    <style name="buttonStyle3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/regularMargin</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="cardViewStyle3" parent="cardViewStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>

    <style name="imageViewLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:shadowColor">@color/primaryDarkColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="imageViewLabel1" parent="imageViewLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="labelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>